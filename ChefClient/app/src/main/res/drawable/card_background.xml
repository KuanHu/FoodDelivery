<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 一个层叠效果,通过阴影表现出立体效果 -->
    <item><!-- 阴影效果 -->
        <shape android:shape="rectangle" >
            <solid android:color="#fcc8c8" /><!-- 阴影的颜色 -->
            <corners android:radius="4dp" /><!-- 圆角 -->
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"><!-- 距底部2dp，漏出上面那个item，使其可以显现出阴影 -->
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:endColor="#ee9ca7"
                android:startColor="#ffdde1" /><!-- item颜色 -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>
